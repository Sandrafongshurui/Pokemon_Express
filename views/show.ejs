<%- include('partials/header'); -%>
    <!-- this will change the post to a put beacuse of the _ method, it will get rea din the server.js -->
    <!-- /pokemon/1 -->
    <form action="/pokemon/<%=selectedPokemonId._id%>?_method=PUT" method="POST">
        <!-- the name will be the querie-->
        <!--the vlua the user typed will be the quries param  -->
        <input type="text" name ="pokemon_name"/>
        <button type="submit">update </button> 
    </form>

    <% if (errMsg !== '') { %>
        <div class="error">
            <p>You have an error: <%= errMsg %> </p>
        </div>
    <% } else { %> 

        <h2><%= selectedPokemonId.name.charAt(0).toUpperCase() + selectedPokemonId.name.slice(1) %></h2>

        <figure>
            <img src="<%= selectedPokemonId.img %>.jpg" />
        </figure>
        <!--go back to the route -->
        <a href="/pokemon">Back</a>
    <% } %> 

